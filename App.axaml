<Application
    RequestedThemeVariant="Light"
    x:Class="ElegantAI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon
                Clicked="OnSettingsClicked"
                Icon="Assets/Icon.ico"
                ToolTipText="Elegant AI">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Click="OnSettingsClicked" Header="Settings" />
                        <NativeMenuItem Click="OnExitClicked" Header="Exit" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>